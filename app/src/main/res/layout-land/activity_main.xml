<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    android:background="#FFFFFF">

        <ImageView
            android:id="@+id/picbody"
            android:layout_width="wrap_content"
            android:layout_height="283dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/body" />

        <ImageView
            android:id="@+id/picarms"
            android:layout_width="wrap_content"
            android:layout_height="281dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/arms"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/picears"
            android:layout_width="wrap_content"
            android:layout_height="283dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/ears"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/piceyebrows"
            android:layout_width="wrap_content"
            android:layout_height="279dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/eyebrows"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/piceyes"
            android:layout_width="wrap_content"
            android:layout_height="283dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/eyes"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/picglasses"
            android:layout_width="wrap_content"
            android:layout_height="283dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/glasses"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/pichat"
            android:layout_width="wrap_content"
            android:layout_height="281dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/hat"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/picmouth"
            android:layout_width="wrap_content"
            android:layout_height="285dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/mouth"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/picmustache"
            android:layout_width="wrap_content"
            android:layout_height="285dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/mustache"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/picnose"
            android:layout_width="wrap_content"
            android:layout_height="285dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/nose"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/picshoes"
            android:layout_width="wrap_content"
            android:layout_height="285dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:src="@drawable/shoes"
            android:visibility="invisible" />


        <CheckBox
            android:id="@+id/arms"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:layout_marginLeft="400dp"
            android:text="arms"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:layout_marginLeft="10dp"
            android:text="ears"
            android:layout_toRightOf="@+id/arms"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400dp"
            android:layout_below="@+id/arms"
            android:text="eyes"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/arms"
            android:layout_below="@+id/ears"
            android:text="glasses"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400dp"
            android:layout_below="@+id/eyes"
            android:text="eyebrows"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/arms"
            android:layout_below="@+id/glasses"
            android:text="mouth"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400dp"
            android:layout_below="@+id/eyebrows"
            android:text="hat"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/arms"
            android:layout_below="@+id/mouth"
            android:text="mustache"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400dp"
            android:layout_below="@+id/hat"
            android:text="shoes"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/arms"
            android:layout_below="@+id/mustache"
            android:text="nose"
            android:textSize="20sp" />



</RelativeLayout>